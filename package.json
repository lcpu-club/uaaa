{
  "name": "@uaaa/workspace",
  "description": "UAAA Monorepo",
  "packageManager": "yarn@3.4.1",
  "license": "AGPL-3.0",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lcpu-club/uaaa.git"
  },
  "bugs": {
